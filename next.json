{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"extends": ["./formatter.json", "./sources/standard.json"],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"a11y": {},
			"complexity": {},
			"correctness": {},
			"nursery": {
				"useGoogleFontDisplay": "error",
				"noDocumentImportInPage": "error",
				"noHeadElement": "error",
				"noHeadImportInDocument": "error",
				"noImgElement": "error"
			},
			"performance": {},
			"security": {},
			"style": {},
			"suspicious": {}
		}
	}
}
